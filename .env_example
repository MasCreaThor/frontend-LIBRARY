# Entorno de la aplicación
NODE_ENV=development

# Configuración del servidor
PORT=3000
API_PREFIX=api

# Configuración de la base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/biblioteca-escolar

ADMIN_EMAIL=admin@biblioteca.edu.co
ADMIN_PASSWORD=Admin1234!

# Configuración de JWT
JWT_SECRET=biblioteca_escolar_super_secret_key_2025_change_in_production
JWT_EXPIRES_IN=24h

# Configuración de seguridad
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Configuración de logging
LOG_LEVEL=debug
LOG_DIRECTORY=logs

# Google Books API
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
GOOGLE_BOOKS_MAX_RESULTS=10

# Configuración de CORS
CORS_ORIGIN=http://localhost:3001

# Configuración de paginación
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# Configuración de archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Configuración de email (para recuperación de contraseña)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@biblioteca-escolar.com